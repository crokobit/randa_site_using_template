<div>
  <h3>edit article</h3>
  <%= form_for @article do |f| %>
    <div class="form-group">
      <%= f.label :title, 'title' %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.label :content, 'content' %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
     <%= f.submit 'edit article', :class => 'button right' %>
  <% end %>
</div>
