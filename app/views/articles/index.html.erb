<div class="container">
  <%= link_to "New", new_article_path %>
  <div class="row">
    <!-- Blog Entries Column -->
    <div class="col-md-8">
      <% @articles.each do |article| %>
        <%= render 'article', article: article %>
        <%= link_to "Edit", edit_article_path(article) %>
      <% end %>
      <ul class="pager">
        <li class="previous">
          <a href="#">← Older</a>
        </li>
        <li class="next">
          <a href="#">Newer →</a>
        </li>
      </ul>
    </div>
  </div>
</div>
